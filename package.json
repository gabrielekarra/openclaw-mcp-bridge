{
  "name": "openclaw-mcp-bridge",
  "version": "0.2.0",
  "description": "MCP aggregator server â€” connects multiple MCP servers and exposes them as one, with context-aware tool filtering. Use standalone or as an OpenClaw plugin.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "openclaw-mcp-bridge": "./dist/server/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.cjs"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    }
  },
  "files": [
    "dist",
    "openclaw.plugin.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/core/index.ts src/server/index.ts --format esm,cjs --dts",
    "start": "node dist/server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "mcp-use": "latest"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "openclaw": {
    "extensions": ["dist/index.js"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gabrielekarra/openclaw-mcp-bridge"
  },
  "license": "MIT",
  "author": "Gabriele",
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "openclaw",
    "mcp",
    "model-context-protocol",
    "mcp-use",
    "ai-agent",
    "plugin",
    "tools",
    "mcp-server",
    "aggregator"
  ]
}

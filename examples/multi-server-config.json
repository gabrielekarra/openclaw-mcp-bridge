{
  "plugins": {
    "entries": {
      "mcp-bridge": {
        "enabled": true,
        "config": {
          "autoDiscover": false,
          "servers": [
            {
              "name": "github",
              "transport": "stdio",
              "command": "npx",
              "args": ["-y", "@modelcontextprotocol/server-github"],
              "categories": ["code", "project-management"]
            },
            {
              "name": "notion",
              "transport": "stdio",
              "command": "npx",
              "args": ["-y", "@notionhq/mcp-server"],
              "categories": ["notes", "documents"]
            }
          ]
        }
      }
    }
  }
}
